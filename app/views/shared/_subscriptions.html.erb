<div class="row">
  <div class="col-md-4">
    <section>
      <h1>
        <%= @user.first_name %> <%= @user.last_name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </div>

<section>
  <div class="container">
    <div class="col-xs-12">
     <% @user.followers.all.each do |follower| %>
          <% if follower.profilepic != nil %>
             <%= cl_image_tag follower.profilepic.path, class:"avatar-large" %>
             <% else %>
            <% end %>
           <h4><%= follower.first_name %> <%= follower.last_name %></h4>
            <% end %>
    </div>
  </div>
  </section>
</div>


