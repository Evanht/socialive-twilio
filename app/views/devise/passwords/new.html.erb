<div class="login-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-4 col-md-offset-4">
        <div class="text-center">
          <div class="form-login">

            <h2>Forgot your password?</h2>

            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, placeholder: "email", label: false %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Send me a new password ;-)", class: "btn btn-primary" %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
