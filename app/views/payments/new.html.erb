<div class="login-wrapper">
  <div class="rubies-wrapper">
    <div class="container">
      <div class="row">
          <div class="text-center">
             <h1>Purchase of <%= @order.rubies %> Rubies</h1>
              <%= form_tag order_payments_path(@order) do %>
                <article>
                  <label class="amount">
                    <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
                  </label>
                </article>


                <script src="https://checkout.stripe.com/checkout.js" id="pay-button" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-name="Rubies"
                  data-email="<%= current_user.email %>"
                  data-description="<%= @order.rubies %> Rubies"
                  data-amount="<%= @order.amount_pennies %>"
                  data-currency="<%= @order.amount.currency %>"></script>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
